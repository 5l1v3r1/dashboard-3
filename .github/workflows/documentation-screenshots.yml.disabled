
This test version has been disabled for now as the documentation
repo will generate screenshots against a dashboard server instance

name: documentation-screenshots

on: [push]

jobs:
  build:
    runs-on: ubuntu-latest
    strategy:
      matrix:
        node-version: [12.x]
    steps:
    - uses: actions/checkout@v1
    - name: Use Node.js ${{ matrix.node-version }}
      uses: actions/setup-node@v1
      with:
        node-version: ${{ matrix.node-version }}
    - name: Setup dependencies
      run: |
        npm install mocha -g &&
        npm install puppeteer --no-save
    - name: Generate screenshots
      run: |
        bash screenshots.sh || exit 1
      env:
        NODE_ENV: testing
        FAST_START: true
        DASHBOARD_SERVER: "http://localhost:9007"
        DOMAIN: "localhost"
        PORT: 9007
        STORAGE_PATH: /tmp/test-data
        GENERATE_SITEMAP_TXT: false
        GENERATE_API_TXT: false
        GENERATE_SCREENSHOTS: true
        DEBUG_ERRORS: true
    - name: Archive screenshots
      uses: actions/upload-artifact@v1
      with:
        name: screenshots
        path: screenshots